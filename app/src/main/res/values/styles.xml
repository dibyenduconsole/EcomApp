<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MenuDrawerImageView" parent="AppTheme">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:layout_width">@dimen/_25sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MenuDrawerTextView" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/md_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Menu_TextView_inActive">
        <item name="fontFamily">@font/md_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Menu_TextView_Active">
        <item name="fontFamily">@font/md_regular</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="HomeTextView" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:fontFamily">@font/md_semi_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="HomeTextViewViewAll" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:fontFamily">@font/md_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

</resources>
